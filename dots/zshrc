# Adapted from code found at <https://gist.github.com/1712320>.
autoload -U colors && colors
setopt prompt_subst

# Symbols / colors
GIT_PROMPT_AHEAD="%{$fg[red]%}↑NUM%{$reset_color%}"
GIT_PROMPT_BEHIND="%{$fg[cyan]%}↓NUM%{$reset_color%}"
GIT_PROMPT_MERGING="%{$fg[magenta]%}⚡︎%{$reset_color%}"
GIT_PROMPT_UNTRACKED="%{$fg[red]%}?%{$reset_color%}"
GIT_PROMPT_MODIFIED="%{$fg[yellow]%}±%{$reset_color%}"
GIT_PROMPT_STAGED="%{$fg[green]%}●%{$reset_color%}"

git_prompt_string() {
  # One git call gets everything
  local raw
  raw=$(git status --porcelain=v2 --branch 2>/dev/null) || return

  local branch="" ahead=0 behind=0 sha=""
  local staged=0 modified=0 untracked=0 merging=0
  local line

  for line in ${(f)raw}; do
    case $line in
      '# branch.head '*)  branch=${line#\# branch.head } ;;
      '# branch.ab '*)
        # format: # branch.ab +N -M
        ahead=${${line#*+}%% *}
        behind=${line##*-}
        ;;
      '# branch.oid '*)   sha=${${line#\# branch.oid }[1,7]} ;;
      '? '*)              untracked=1 ;;
      1\ ?[MTADRC]\ *|2\ ?[MTADRC]\ *)  modified=1 ;;   # worktree changes
      1\ [MTADRC]?\ *|2\ [MTADRC]?\ *)  staged=1 ;;     # index changes
    esac
  done

  [[ $branch == "(detached)" ]] && branch=${sha}

  # Check for merge/rebase (still basically free — pure builtins)
  local gitdir
  gitdir=$(git rev-parse --git-dir 2>/dev/null)
  [[ -f "$gitdir/MERGE_HEAD" ]] && merging=1

  # Build state string
  local state=""
  (( ahead > 0 ))   && state+=${GIT_PROMPT_AHEAD//NUM/$ahead}
  (( behind > 0 ))  && state+=${GIT_PROMPT_BEHIND//NUM/$behind}
  (( merging ))      && state+=$GIT_PROMPT_MERGING
  (( untracked ))    && state+=$GIT_PROMPT_UNTRACKED
  (( modified ))     && state+=$GIT_PROMPT_MODIFIED
  (( staged ))       && state+=$GIT_PROMPT_STAGED
  [[ -n $state ]]    && state="$state "

  echo " (${state}${branch} ${sha})"
}

_compute_hostname_color() {
  case $HOST in
    teller)   _HOST_COLOR='%F{cyan}' ;;
    tanoshii) _HOST_COLOR='%F{green}' ;;
    slug)     _HOST_COLOR='%F{magenta}' ;;
    *)
      local hash=$(( $(echo -n "$HOST" | cksum | cut -d' ' -f1) % 256 ))
      (( hash < 4 )) && hash=$(( hash + 4 ))
      _HOST_COLOR="%F{$hash}"
      ;;
  esac
}
_compute_hostname_color

PROMPT='%(?..%F{red}[%?] )%f%* %F{210}%n@${_HOST_COLOR}%M%f %B%F{220}%2/%f%b$(git_prompt_string) %# '

